<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.codingtown.calculator_si.MainActivity"
    android:background="@drawable/a">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="SIMPLE INTEREST CALCULATOR"
        android:textColor="#1c1ff4"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMOUNT"
            android:id="@+id/textView2"
            android:textStyle="bold"
            android:textColor="#1c1ff4" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv1"
            android:textColor="#ffffff"
            android:inputType="numberDecimal"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INTEREST"
            android:id="@+id/textView3"
            android:textStyle="bold"
            android:textColor="#1c1ff4" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:id="@+id/tv2"
            android:inputType="numberDecimal"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="DAY (or) MONTH (or) YEAR"
            android:id="@+id/textView4"
            android:textColor="#1c1ff4"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:inputType="numberDecimal"
            android:id="@+id/tv3"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chgview"

            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_weight="0.24"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_weight="0.20" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.08"
            android:weightSum="1">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAY"
                android:background="#a9fca0"
                android:id="@+id/day"
                android:textStyle="bold"
                android:textColor="#1c1ff4"
                android:layout_weight="0.23" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.13" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MONTH"
                android:background="#a9fca0"
                android:id="@+id/m"
                android:textColor="#1c1ff4"
                android:textStyle="bold"
                android:layout_weight="0.20" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.10" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YEAR"
                android:id="@+id/y"
                android:textColor="#1c1ff4"
                android:background="#a9fca0"
                android:textStyle="bold"
                android:layout_weight="0.31" />
        </LinearLayout>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:text="CLEAR"
            android:id="@+id/clr"
            android:textColor="#1c1ff4"
            android:background="#a9fca0"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>
